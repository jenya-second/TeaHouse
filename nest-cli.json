{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./backend/src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./env/*.env",
        "outDir": "./backend/dist",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true,
    "tsConfigPath": "./backend/tsconfig.json"
  }
}
